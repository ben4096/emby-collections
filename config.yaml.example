# Emby Collection Manager Configuration
# This is a working example configuration
# Copy this to config.yaml and update with your own API keys

emby:
  url: "http://your-emby-server:8096"
  api_key: "YOUR_EMBY_API_KEY"
  user_id: ""

mdblist:
  api_key: "YOUR_MDBLIST_API_KEY"

trakt:
  client_id: "YOUR_TRAKT_CLIENT_ID"
  client_secret: ""
  access_token: ""

collections:
  # Weekly trending from MDBList
  - name: "Top Movies of the Week"
    source: "mdblist"
    list_id: "garycrawfordgc/top-movies-of-the-week"
    sort_title: "01"
    display_order: "PremiereDate"
    overview: "This list updates daily"
    image: "images/top-movies-of-the-week.jpeg"

  # Seasonal collection - Christmas
  - name: "Christmas Movies"
    source: "mdblist"
    list_id: "snoak/christmas-movies"
    sort_title: "00"
    display_order: "PremiereDate"
    overview: "Merry Christmas everyone!"
    image: "images/christmas-movies.jpeg"
    seasonal:
      start_month: 12
      start_day: 15
      end_month: 1
      end_day: 5

  # Seasonal collection - Halloween
  - name: "Halloween Vibes"
    source: "mdblist"
    list_id: "mrjakemccloy/halloween-vibes"
    sort_title: "00"
    display_order: "PremiereDate"
    overview: "Don't look, but there's someone behind you"
    image: "images/halloween-vibes.png"
    seasonal:
      start_month: 9
      start_day: 24
      end_month: 10
      end_day: 1

  # Trending movies from Trakt
  - name: "Trending Movies"
    source: "trakt"
    category: "trending"
    limit: 100
    sort_by: "rating"
    sort_title: "02"
    display_order: "PremiereDate"
    overview: "This list updates daily"
    image: "images/trending.jpeg"

  # Most watched this week
  - name: "Streaming Charts"
    source: "trakt"
    category: "watched"
    limit: 100
    sort_by: "rating"
    sort_title: "03"
    display_order: "PremiereDate"
    overview: "This list updates daily"
    image: "images/streaming-charts.jpeg"

  # All-time most played
  - name: "Popular Movies"
    source: "trakt"
    category: "played"
    time_period: "all"
    limit: 500
    sort_by: "rating"
    sort_title: "04"
    display_order: "PremiereDate"
    overview: "This list updates daily"
    image: "images/popular-movies.jpeg"

  # Oscars 2025 nominees
  - name: "Oscars 2025"
    source: "trakt"
    username: "pullsa"
    list_slug: "the-97th-academy-awards-oscars-2025"
    limit: 100
    sort_by: "rating"
    sort_title: "05"
    display_order: "PremiereDate"
    overview: "Nominees and winners Oscars 2025"
    image: "images/oscars-2025.jpeg"

  # All-time Best Picture winners
  - name: "Best Picture Winners"
    source: "trakt"
    username: "thefork"
    list_slug: "academy-awards-best-picture-winners"
    limit: 150
    sort_by: "rating"
    sort_title: "06"
    display_order: "PremiereDate"
    overview: "All time Oscars best picture winners"
    image: "images/best-picture-winners.png"

settings:
  dry_run: false
  clear_collections: true
  log_level: "INFO"
  log_file: "emby_collections.log"
  match_priority: ["imdb_id", "tmdb_id", "title"]
  remove_missing: true
  delete_unlisted: false
